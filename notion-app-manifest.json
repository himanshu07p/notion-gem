{
  "name": "Gemini AI Assistant",
  "description": "AI-powered assistant using Google Gemini for Notion content analysis and enhancement",
  "version": "1.0.0",
  "icon": "https://i.imgur.com/ai-icon.png",
  "capabilities": {
    "read_content": true,
    "insert_content": true,
    "read_user_info": true
  },
  "oauth": {
    "redirect_urls": ["http://localhost:3000/auth/callback"],
    "scopes": ["read", "insert"]
  },
  "ui_extensions": {
    "block_actions": [
      {
        "id": "ai_summarize",
        "name": "📋 AI Summary",
        "description": "Generate AI summary of this content",
        "icon": "📋"
      },
      {
        "id": "ai_questions",
        "name": "❓ AI Questions", 
        "description": "Generate discussion questions",
        "icon": "❓"
      },
      {
        "id": "ai_analysis",
        "name": "🔍 AI Analysis",
        "description": "Create detailed AI analysis",
        "icon": "🔍"
      }
    ],
    "slash_commands": [
      {
        "id": "gemini_ai",
        "name": "Gemini AI",
        "description": "Access Gemini AI features",
        "icon": "🤖"
      }
    ]
  },
  "external_urls": {
    "privacy_url": "https://your-domain.com/privacy",
    "terms_url": "https://your-domain.com/terms"
  }
}
