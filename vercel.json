{
  "version": 2,
  "builds": [
    {
      "src": "api/mcp.ts",
      "use": "@vercel/node"
    },
    {
      "src": "api/actions.ts",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/mcp/(.*)",
      "dest": "/api/mcp"
    },
    {
      "src": "/health",
      "dest": "/api/mcp"
    },
    {
      "src": "/ai-interface",
      "dest": "/public/ai-interface.html"
    },
    {
      "src": "/privacy",
      "dest": "/public/privacy.html"
    },
    {
      "src": "/terms",
      "dest": "/public/terms.html"
    },
    {
      "src": "/actions",
      "dest": "/api/actions"
    },
    {
      "src": "/webhook",
      "dest": "/api/actions"
    },
    {
      "src": "/webhook/verify",
      "dest": "/api/actions"
    },
    {
      "src": "/auth/(.*)",
      "dest": "/api/actions"
    },
    {
      "src": "/slash-commands",
      "dest": "/api/actions"
    },
    {
      "src": "/",
      "dest": "/api/actions"
    }
  ]
}
